<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_4sdp">

    <View
        android:id="@+id/viewSupporter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/imageViewMovies" />

    <View
        android:id="@+id/viewBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tvMovieName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_movies"
        android:paddingBottom="@dimen/_10sdp"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageViewMovies"
        android:src="@mipmap/ic_launcher"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_4sdp" />

    <TextView
        android:id="@+id/tvMovieName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:fontFamily="@font/ubuntu_medium"
        android:includeFontPadding="false"
        android:paddingTop="@dimen/_8sdp"
        android:text="Movies name"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewMovies"
        app:layout_constraintTop_toTopOf="@id/imageViewMovies" />

    <TextView
        android:id="@+id/tvNetwork"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:fontFamily="@font/ubuntu_regular"
        android:includeFontPadding="false"
        android:textColor="@color/colorTextOther"
        android:textSize="@dimen/_12ssp"
        android:text="Movies name"
        app:layout_constraintEnd_toEndOf="@id/tvMovieName"
        app:layout_constraintTop_toBottomOf="@id/tvMovieName"
        app:layout_constraintStart_toStartOf="@id/tvMovieName"/>

    <TextView
        android:id="@+id/textStarted"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:fontFamily="@font/ubuntu_regular"
        android:includeFontPadding="false"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/_12ssp"
        android:text="Movies name"
        app:layout_constraintEnd_toEndOf="@id/tvMovieName"
        app:layout_constraintTop_toBottomOf="@id/tvNetwork"
        app:layout_constraintStart_toStartOf="@id/tvMovieName"/>

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:fontFamily="@font/ubuntu_regular"
        android:includeFontPadding="false"
        android:text="Movies name"
        android:textColor="@android:color/holo_green_light"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="@id/tvMovieName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/tvMovieName"
        app:layout_constraintTop_toBottomOf="@id/textStarted" />

</androidx.constraintlayout.widget.ConstraintLayout>